rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /events/{eventId} {
      // Admins can do anything, others can only read.
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@example.com';
    }

    match /users/{userId} {
      // Users can create and read their own profile.
      // Authenticated users can read other user profiles (needed for admin).
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    match /bookings/{bookingId} {
       // Users can create their own bookings.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Users can read their own bookings. Authenticated users can list all bookings (for seat availability).
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.email == 'admin@example.com');
      allow list: if request.auth != null;
    }
  }
}