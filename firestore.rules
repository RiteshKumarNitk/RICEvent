rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Events: Publicly readable by anyone.
    match /events/{eventId} {
      allow read: if true;
      // Write access is restricted. Only admin can write.
      allow write: if request.auth != null && request.auth.token.email == 'admin@example.com';
    }

    // Users: Allow users to read all profiles (for names), but only write to their own.
    match /users/{userId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == userId;
        allow update: if request.auth.uid == userId;
        allow delete: if request.auth.uid == userId;
    }

    // Bookings: Users can create bookings and only read their own. Admin can read all.
    match /bookings/{bookingId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Allow user to read their own bookings OR if user is admin
      allow read: if (request.auth != null && request.auth.uid == resource.data.userId) || 
                   (request.auth != null && request.auth.token.email == 'admin@example.com');
                   
      // No updates or deletes allowed for now to preserve booking history
      allow update, delete: if false;
    }
  }
}
