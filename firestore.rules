rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to events
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@example.com';
    }

    // Allow listing of events for anyone
    match /events {
      allow list: if true;
    }

    // Rules for users and bookings
    match /users/{userId} {
      // Users can create their own doc
      allow create: if request.auth.uid == userId;
      // Only the user or an admin can read their doc
      allow read: if request.auth.uid == userId || (request.auth.token.email == 'admin@example.com');
    }

    match /bookings/{bookingId} {
      // Users can create their own bookings
      allow create: if request.auth.uid == request.resource.data.userId;
      // Users can read their own bookings, admin can read all bookings for an event
      allow read: if (request.auth.uid == resource.data.userId) || (request.auth.token.email == 'admin@example.com');
    }
  }
}