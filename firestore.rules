rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Events are public and can be read by anyone.
    // Writing should be restricted to admins in a real app, but for now, we'll lock it down.
    match /events/{eventId} {
      allow read: if true;
      allow write: if false; 
    }

    // Users can create their own user document, but can only read/write their own.
    // Admins can read all user documents.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId
          || request.auth.token.email == 'admin@example.com';
      allow create: if request.auth != null;
    }
    
    // Bookings can be created by any authenticated user.
    // Users can only read their own bookings.
    // Admins can read all bookings.
    match /bookings/{bookingId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.uid == resource.data.userId
          || request.auth.token.email == 'admin@example.com';
      allow write: if false;
    }
  }
}
