rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow admin (any authenticated user) to manage events
    match /events/{eventId} {
      allow read, write, list: if request.auth != null;
    }

    // Allow admin (any authenticated user) to read/list all bookings.
    // Allow users to create bookings for themselves and read their own.
    match /bookings/{bookingId} {
      allow read, list: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow admin (any authenticated user) to read all user profiles.
    // Allow users to create their own user document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
  }
}
