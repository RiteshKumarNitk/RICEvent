rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      allow read, write: if request.auth != null;
    }
    match /events {
      allow list: if true; // Allow public listing of events
    }

    match /bookings/{bookingId} {
      // Allow users to create their own bookings
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Allow users to read their own bookings
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow admin to read all bookings
      allow read: if request.auth != null && request.auth.token.email == 'admin@example.com';
      // Allow authenticated users to list bookings (for seat availability checks)
      allow list: if request.auth != null;
    }
    
    match /users/{userId} {
       // Allow users to create their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to read any user profile (for displaying names etc.)
      allow read: if request.auth != null;
       // Allow owner to update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
