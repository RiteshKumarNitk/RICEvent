rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Events can be read by anyone, but only written by authenticated users (admins).
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users can create their own user document. Authenticated users can read user profiles (for admin panel).
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }

    // Members can be read by any authenticated user (for member verification).
    // Members can be written by any authenticated user (for admin management).
    match /members/{memberId} {
        allow read, write: if request.auth != null;
    }

    // Bookings can be created by authenticated users for themselves.
    // They can only read/update/delete their own bookings.
    // Authenticated users (admins, member verification) can list bookings.
    match /bookings/{bookingId} {
      allow list: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
