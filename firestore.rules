rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      // Events are public, but only authenticated users can write/update/delete.
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /users/{userId} {
      // A user can create their own profile.
      allow create: if request.auth != null && request.auth.uid == userId;
      // Any authenticated user can read user profiles (needed for admin).
      allow read: if request.auth != null;
    }

    match /bookings/{bookingId} {
      // A user can create their own booking.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // A user can read their own bookings.
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      // Authenticated users (admin/system) can list bookings to check availability.
      allow list: if request.auth != null;
    }
  }
}
